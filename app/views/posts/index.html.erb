<p id="notice"><%= notice %></p>
<% @posts.each do |post| %>

<section class="page-section">
  <div class="container">
    <div class="product-item">
      <div class="product-item-title d-flex">
        <div class="bg-faded p-5 d-flex ml-auto mr-auto rounded">
          <h2 class="section-heading mb-0">
            <span class="section-heading-upper"><%= link_to post.title, post %></span>
          </h2>
        </div>
      </div>
      <img class="product-item-img mx-auto d-flex rounded img-fluid mb-lg-0" <%= image_tag(post.image.profile_size.url) %>
      <div class="product-item-description d-flex ml-auto mr-auto">
        <div class="bg-faded p-5 rounded">
          <p class="mb-0">  <%= post.description %></br>
            <% if user_signed_in? %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %> </p>
        </div>
      </div>
    </div>
  </div>
</section>


    <hr>
<% end %>


<br>

<%= link_to 'New Post', new_post_path %>

<footer class="footer text-faded text-center py-5">
  <div class="container">

      <%= yield %>
    <% if user_signed_in? %>
      <div>Signed in as... <%= current_user.email %>
        (<%= link_to'Sign out', destroy_user_session_path,
          :method => :delete%>)
      </div>
    <% else %>
      <%= link_to'Register', new_user_registration_path %> or
      <%= link_to'Sign in', new_user_session_path %>
    <% end %></br>
