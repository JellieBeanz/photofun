
<section class="page-section clearfix">
    <div class="container">
      <div class="intro">
        <img class="intro-img img-fluid mb-3 mb-lg-0 rounded" src="https://fotofun-development.s3.amazonaws.com/CSS/img/intro.jpg" alt="">
        <div class="intro-text left-0 text-center bg-faded p-5 rounded">
          <h2 class="section-heading mb-4">
            <span class="section-heading-upper">View Amazing Photos Like This </span>
            <span class="section-heading-lower">from people everywhere in the world!</span>
          </h2>
          <p class="mb-3">Create a profile and start uploading pictures today!</p>

          <div class="intro-button mx-auto">
            <a class="btn btn-primary btn-xl" <%= link_to 'See all our posts!',  posts_path %></a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <footer class="footer text-faded text-center py-5">
    <div class="container">

        <%= yield %>
      <% if user_signed_in? %>
        <div>Signed in as... <%= current_user.email %>
          (<%= link_to'Sign out', destroy_user_session_path,
            :method => :delete%>)
        </div>
      <% else %>
        <%= link_to'Register', new_user_registration_path %> or
        <%= link_to'Sign in', new_user_session_path %>
      <% end %></br>
